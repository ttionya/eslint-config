{
  "name": "@ttionya/eslint-config",
  "version": "0.0.1",
  "description": "ESLint 规则",
  "author": "ttionya <my@ttionya.com>",
  "license": "MIT",
  "keywords": [
    "eslint",
    "config",
    "eslintconfig"
  ],
  "main": "base.js",
  "files": [
    "base.js"
  ],
  "homepage": "https://github.com/ttionya/eslint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ttionya/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/ttionya/eslint-config/issues"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "lint": "eslint --fix -f table .",
    "test": "npm run build && mocha tests"
  },
  "dependencies": {
    "eslint": "^6.8.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "glob": "^7.1.6",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "mkdirp": "^1.0.3",
    "mocha": "^7.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "**/*.{js,vue,ts}": [
      "eslint --fix"
    ]
  }
}
